// 
// The basic interface for the readability
// 
//

enum reqType {
  textRpt
  version
}

struct lineScore {
  lineNo    int
  lineTxt   string
  lineScore int
}

struct ReadabilityRequest {
  type reqType
  reqData string
}

struct ReadabilityResponse {
  resultCode int
  docScore int
  lineScores []lineScore
}

interface ReadabilityService {
  
  readability(req ReadabilityRequest) ReadabilityResponse

}
